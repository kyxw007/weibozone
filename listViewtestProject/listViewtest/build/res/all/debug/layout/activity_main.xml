<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world"
        android:id="@+id/textView"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="listView01"
            android:id="@+id/listview01"
            android:layout_below="@+id/textView"
            android:layout_alignLeft="@+id/textView"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="21dp"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="listview02"
            android:id="@+id/listview02"
            android:layout_alignTop="@+id/listview01"
            android:layout_toRightOf="@+id/listview01"
            android:layout_marginLeft="18dp"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DBtest"
            android:id="@+id/database"
            android:layout_below="@+id/listview01"
            android:layout_alignLeft="@+id/listview01"
            android:layout_marginTop="11dp"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="chosecontent"
            android:id="@+id/chosecontent"
            android:layout_alignBottom="@+id/database"
            android:layout_toRightOf="@+id/listview01"/>

</RelativeLayout>
